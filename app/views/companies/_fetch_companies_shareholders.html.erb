<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-secondary btn-sm" data-toggle="modal" data-target="#fetchCompaniesShareholders">
  UPDATE&nbsp;companies&nbsp;shareholders
</button>

<!-- Modal -->
<div class="modal fade" id="fetchCompaniesShareholders" tabindex="-1" role="dialog"
 aria-labelledby="fetchCompaniesShareholders" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="fetchTitle">Select and confirm to update selected companies shareholders</h5>
        <button class="btn-close" data-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        By confirm you will download actual selected companies shareholders
        and update companies shareholders database.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary btn-sm" data-dismiss="modal">Dismiss</button>
        <%= form_with url: companies_update_selected_companies_shareholders_path, method: :post, class: "form-inline d-flex" do |f| %>
          <div class="container-fluid">
            <%= f.select :stock, ["GPW", "NC"], selected: "GPW", class: "form-select form-select-sm" %>
          </div>
          <%= f.submit "Update", class: "btn btn-outline-primary btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
